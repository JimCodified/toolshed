

<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="row">
      <div class="small-4 end">
        <div data-alert class="alert-box <%= name.to_s == 'notice' ? 'success' : 'alert' %> round">
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
          <a href="#" class="close">&times;</a>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
