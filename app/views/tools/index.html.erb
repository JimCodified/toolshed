
<% content_for :top_content do %>
  <div class="jumbotron">
    <div class="container">
      <h1>Welcome to the Shed!</h1>
    </div>
  </div>
<% end %>

<% @tools.each do |tool| %>
  <% unless tool.has_parent_tool? %> <!-- check to see if this is an accessory of another tool -->
  <div class="container panel panel-default">

    <div class="row panel">
      <div class="col-md-2"><p class="text-info"><strong><%= tool.brand %></strong></p></div>
      <div class="col-md-2"><p class="text-muted"><%= tool.kind %></p></div>
      <div class="col-md-2"><p class="text-muted">Model #: <%= tool.model %></p></div>
    </div>
    <% if tool.nickname? %>
    <div class="row">
      <div class="col-md-6"><h4><%= tool.nickname %></h4></div>
    </div>
    <% end %>
    <div class="row">
      <div class="col-md-6"><h4><%= tool.description %></h4></div>
    </div>
    <div class="row">
      <div class="col-md-6"><% if tool.pic? %><img src="<%=tool.pic%>" class="img-responsive" alt="Tool image"><%end%></div>
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-6"><%= tool.borrower.name if tool.has_borrower?  %></div>
        </div>
        <div class="row">
          <div class="col-md-6">Purchase Location: <%=tool.purchase_location%></div>
        </div>
        <div class="row">
          <div class="col-md-6">Purchase Date:<%= tool.purchase_date %></div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-1">Notes:</div>
      <div class="col-md-8 panel panel-default"><%= tool.notes %></div>
    </div>

    <% if tool.has_accessories? %>
      <div class="panel-group" id="accordion" aria-multiselectable="true">
        <h5>
          <a role="button" data-toggle="collapse" href="#<%=tool._id%>accessory_list">Show Accessories</a>
        </h5>
        <div class="panel-collapse collapse" role="tabpanel" id="<%=tool._id%>accessory_list">
          <div class="panel panel-default">
            <p><%= tool.accessories[0].description %> : <%= tool.accessories[0].brand %> : <%= tool.accessories[0].kind %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
  <% end %>
<% end %>
